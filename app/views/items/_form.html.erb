<%= form_for(@item) do |f| %>
  <%= render :partial => 'template/form_errors', :object => @item %>

<div class="card">
  <div class="panel-body">
    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label>Category</label>
          <%= f.collection_select :item_category_id, ItemCategory.all, :id, :name, {prompt: "Select a category"}, {class: "form-control"}  %>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label>Name of Item</label>
          <%= f.text_field :name, :class => "form-control", :placeholder => "Item Name" %>
        </div>
      </div>
    </div>


    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <label>SKU</label>
          <%= f.text_field :sku, :class => "form-control", :placeholder => "Item Sku" %>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <label>Price</label>
          <%= f.text_field :price, :class => "form-control", :placeholder => "Item Price" %>
        </div>
      </div>
    </div>

    <div class="row">
        <div class="col-sm-6">
        <div class="col-sm-2">
        <div class="fform-group">
          <label class="form-check-label">No Discount</label>
          <div class="no-discound">
          <%= f.check_box :discount, :class => "form-control"%>
          </div>
        </div>
        </div>
      </div>
      
      <div class="col-sm-6">
        <div class="form-group">
          <label>Description</label>
          <%= f.text_area :description, :class => "form-control", :placeholder => "Item Description" %>
        </div>
      </div>
    </div>
     
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <%= f.submit 'Update Item', :class => "btn btn-success btn-lg" %>
  </div>
</div>
<% end %>
