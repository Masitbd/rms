
<%= form_for("user", :url => user_session_path, :html => { :class => "form-signin", :role => "form" }) do |f| %>
  
  <h2 class="form-signin-heading"><a target="_blank" href="<%= @configurations.website_url.blank? ? 'http://masitbd.com' : (@configurations.website_url) %>">
          <%= @configurations.restaurant_name.blank? ? 'Restauran Management System' : @configurations.restaurant_name %></a></h2>


<div class="form-group">

    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', :placeholder => 'User Email' %>

    <%= f.password_field :password, :class => 'form-control', :placeholder => 'Password' %>
</div>
  <div class="form-group">
      <%= f.check_box :remember_me %> Remember me
  </div>
<div class="form-group">
  <button class="btn btn-lg btn-primary btn-block" value="Sign in" type="submit">Sign in</button>
  <%= render "devise/shared/links" %>
</div>
  <p class="copyright">Copyright &copy; <%= Time.now.year %> Masitbd.com</p>
<% end %>